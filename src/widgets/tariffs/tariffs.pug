.row
    .col-12.offset-xl-1.col-xl-10
        .container
            .row.plans-table
                .col-6.col-lg-3.px-0
                    .plans-table__wrap
                        div
                            p Visa provisions
                        each item in [0,1,2,3]
                            div
                                p= item+1+' visa package'
                .col-6.col-lg-3.px-0
                    .widget__content
                        .swiper-container.plans-swiper
                            .swiper-wrapper
                                 -var plans = ['AED 11,000', 'AED 13,000', 'AED 15,000', 'AED 17,000']
                                 -var plTitle = ['Annual package', '2 years', '3 years']
                                 each item in [0,1,2]
                                     .swiper-slide
                                         .plans-table__wrap
                                             div
                                                 p= plTitle[item]
                                             each item in [0,1,2,3]
                                                 div
                                                     p= plans[item]
                            include ../../tiles/swiper-pagination/swiper-pagination
